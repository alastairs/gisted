<Window x:Class="GistEd.Debugging.RestClient.Views.NinjectKernelLoader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GitHub API Raw Client" WindowStyle="None" 
        Width="300" SizeToContent="Height" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical">
        <TextBlock Margin="0" Text="{Binding Path=Title,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type Window}}}" FontSize="13" />
        <TextBlock Margin="5" VerticalAlignment="Top">Loading...</TextBlock>
        <ProgressBar Margin="5"  VerticalAlignment="Top" Height="28" IsIndeterminate="True" />
    </StackPanel>
</Window>
